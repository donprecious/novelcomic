@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-box" style="background: #e5e5e59e">
    <div>
        <div class="logo">
            <span class="db"><img src="~/images/logo_black.png" width="150"   alt="logo" /></span>
            <h4 class="font-medium m-b-20">Sign Up </h4>
            <div>
                <div asp-validation-summary="All" class="text-danger"></div>

            </div>
        </div>
        <!-- Form -->
        <div class="row">
            <div class="col-12">
                <form class="form-horizontal m-t-20" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div>
                        @*<span asp-validation-for="Email" class="text-danger"></span> <br />
                        <span asp-validation-for="Password" class="text-danger"></span>  <br />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>  <br />*@

                    </div>
                    <span asp-validation-for="Email"  class="form-text text-danger"></span>
                    <div class="form-group row">
                        <div class="col-12 ">
                            <input class="form-control form-control-lg" asp-for="Email" type="text" required="" placeholder="Email">
                        </div>
                    </div>

                    <span asp-validation-for="Password"  class="form-text text-danger"></span>
                    <div class="form-group row">
                        <div class="col-12 ">
                            <input class="form-control form-control-lg" asp-for="Password" type="password" required=" " placeholder="Password">
                        </div>
                    </div>
                    <span asp-validation-for="ConfirmPassword"  class="form-text text-danger"></span>

                    <div class="form-group row">
                        <div class="col-12 ">
                            <input class="form-control form-control-lg" asp-for="ConfirmPassword" type="password" required=" " placeholder="Confirm Password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 ">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1">I agree to all <a href="javascript:void(0)">Terms</a></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center ">
                        <div class="col-xs-12 p-b-20 ">
                            <button class="btn btn-block btn-lg btn-info " type="submit ">SIGN UP</button>
                        </div>
                    </div>
                    <div class="form-group m-b-0 m-t-10 ">
                        <div class="col-sm-12 text-center ">
                            Already have an account? <a asp-action="Login" class="text-info m-l-5 "><b>Sign In</b></a>
                        </div>
                    </div>
                </form>
                    
                <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" >
                    <button href="javascript:void(0)" class="btn btn-googleplus" name="provider" value="Google" title="Log in using your Google account" data-toggle="tooltip" title="Register with Google" data-original-title="Register with Google"> <i aria-hidden="true" class="fab fa-google"></i> </button>
                    @*<a href="javascript:void(0)" class="btn  btn-facebook" data-toggle="tooltip" title="" data-original-title="Login with Facebook"> <i aria-hidden="true" class="fab fa-facebook-f"></i> </a>*@

                    @*<div>
                                            <p>
                                                @foreach (var provider in loginProviders)
                                                {
                                                    <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.Name</button>
                                                }
                                            </p>
                                        </div>*@
                </form>
            </div>
        </div>
    </div>
</div>


