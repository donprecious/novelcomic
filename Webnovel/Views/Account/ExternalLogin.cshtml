@model ExternalLoginViewModel
@{

    ViewData["Title"] = "Connect your Social Account";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="auth-box" style="background: #e5e5e59e">
    <div id="loginform">
        <div class="logo">
            <span class="db"><img src="~/images/logo_black.png" width="150" alt="logo" /></span>
            <h3>You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.</h3>
            <h4 class="font-medium m-b-20">Connect your Social Account to your Account</h4>

        </div>
        <!-- Form -->
        <div class="row">
            <div class="col-md-12">
