                <form class="form-horizontal m-t-20"  asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @*<span asp-validation-for="Password" class="text-danger"></span>
                            <span asp-validation-for="Email" class="text-danger"></span>*@

                    </div>
                    <span asp-validation-for="Email" class="form-text text-danger"></span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="Email" id="basic-addon1"><i class="ti-email"></i></span>
                        </div>
                        <input type="text" class="form-control form-control-lg" asp-for="Email" value="@Model.Email"  placeholder="email" aria-label="email" aria-describedby="basic-addon1">
                    </div>

                    <span asp-validation-for="Password" class="form-text text-danger"></span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon2"><i class="ti-key"></i></span>
                        </div>
                        <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">
                    </div>
                   
                    <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3"><i class="ti-key"></i></span>
                        </div>
                        <input type="password" class="form-control form-control-lg" asp-for="ConfirmPassword" placeholder="Connfirm Password" aria-label="Confirm Password" aria-describedby="basic-addon3">
                    </div>
                    <div class="form-group text-center">
                        <div class="col-xs-12 p-b-20">
                            <button class="btn btn-block btn-lg btn-info" type="submit">Connect </button>
                        </div>
                    </div>

                    <div class="form-group m-b-0 m-t-10">
                        <div class="col-sm-12 text-center">
                            Don't have an account? <a asp-action="Register" class="text-info m-l-5"><b>Sign Up</b></a>
                        </div>
                    </div>

                </form>
                
            </div>
        </div>
    </div>
