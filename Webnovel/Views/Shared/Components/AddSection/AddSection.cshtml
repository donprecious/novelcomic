@model Webnovel.Models.NovelSectionVm

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Add Section</h4>
      
        <form class="m-t-25" asp-controller="Novel" id="addSectionForm" asp-action="AddSection">
            @Html.AntiForgeryToken()
            <div class="alert alert-warning hide" id="alertNovelError"></div>
            <input asp-for="NovelId" type="hidden"/>
            <div class="form-group">
                <label class="control-label">Section Title</label>
                <input asp-for="Title" type="text" class="form-control">
                <span asp-validation-for="Title" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" id="btnCreateSection" type="submit"> Create Section
                    <img src="~/images/loading.gif"  class="hide" id="addSectionLoading"/>
                </button>
            </div>
        </form>
    </div>
</div>
