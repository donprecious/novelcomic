@model Webnovel.Entities.Chapter

<div class="card">
    <div class="card-body">
        <div class="mb-3">
          
          
            <button class="btn btn-orange" onclick="saveEdit(@Model.Id)" id="btnSaveContent"><i class="ti ti-save"></i> Save</button>
            <h4 class="card-title text-center" > @Model.Name </h4>
            <h6 class="card-title text-center"> @Model.NovelSection.Title </h6>

            <div class="mt-3 p-l-5 editor">

                @Html.Raw(Model.Content)

            </div>

        </div>
    </div>
</div>

