@model Webnovel.Entities.AnimationEpisode


<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <h5>Animation</h5>
            <div class="video-div" style="width: 100%" >
                <video
                    id="video_player"
                    controls
                    autoplay
                    class="cld-video-player" 
                    data-cld-public-id="@Model.VideoUrl"  
                >
                </video>

            </div>
            <button class="btn btn-primary" data-id="@Model.Id"> Change Animation</button>

        </div>
    </div>


</div>