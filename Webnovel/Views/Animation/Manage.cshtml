    <link href="~/admin/assets/libs/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="https://unpkg.com/cloudinary-video-player@1.1.3/dist/cld-video-player.min.css" 
          rel="stylesheet">   
