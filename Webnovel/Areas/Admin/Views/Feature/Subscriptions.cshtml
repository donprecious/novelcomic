@model System.Collections.Generic.ICollection<Webnovel.Entities.Subscription>

@{
    ViewData["Title"] = "Subscriptions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Settings">Settings</a>
                    </li>
                  
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);">Subscriptions</a>
                    </li>

                </ol>
            </div>

        </div><!--end page-title-box-->
    </div><!--end col-->
</div><!--end row--><!-- end page title end breadcrumb -->

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="mt-0 header-title">Subscriptions</h4>
                <a asp-action="CreateSubscriptions" class="btn btn-primary mb-4">Create new</a>
                <div class="table-responsive">
                    <table class="table table-bordered mb-0 table-centered">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Duration</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.Title</td>
                                    <td>@i.Description</td>
                                    <td>@i.Amount</td>
                                    <td>@i.Days - Days </td>
                                    
                                    <td>
                                        <div class="dropdown d-inline-block ">
                                            <a class="nav-link dropdown-toggle arrow-none btn btn-primary" id="dLabel4" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">  <i class="fas fa-ellipsis-v font-20"></i> Action</a>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel4">
                                                <a class="dropdown-item" href="#">Edit</a>
                                                <a class="dropdown-item" href="#">Hide</a>
                                                @*<a class="dropdown-item" href="#">Tasks Details</a>*@
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                    
                        </tbody>
                    </table><!--end /table-->
                </div><!--end /tableresponsive-->
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!-- end col -->
   
</div>